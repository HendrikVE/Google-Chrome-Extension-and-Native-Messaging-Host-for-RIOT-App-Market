{
    "applications": {
        "gecko": {
            "id": "rapstore.browser-integration@riot-apps.net"
        }
    },
    "name": "RAPstore Extension",
    "version": "1.0.8",
    "manifest_version": 2,
    "description": "Browser integration for the RAPstore",

    "icons": {
        "128": "icon-128.png"
    },

    "background": {
        "scripts": ["background_script.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": [
            "*://localhost/*",
            "*://141.22.28.91/*",
            "*://rapstore.cladmi.eu/*",
            "*://demo.riot-apps.net/*"
        ],
        "js": ["content_script.js"],
        "all_frames": true,
        "run_at": "document_end"
    }],

    "permissions": [
        "nativeMessaging"
    ]
}
